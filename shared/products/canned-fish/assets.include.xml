  Product: Canned Fish

  You are free to include this product in your mod, as long as you don't change any values.
  Copy the file as is and use `<Include File='/products/canned-fish/assets.include.xml' />`.

  Original from: https://github.com/jakobharder/anno-1800-jakobs-mods
  You can request changes there as well.
-->
<ModOps>
  <!-- # Product: Canned Fish -->
  <ModOp GUID="1010217" Type="addNextSibling">
    <Asset>
      <Template>Product</Template>
      <Values>
        <Standard>
          <GUID>1500010120</GUID>
          <Name>Canned Fish</Name>
          <IconFilename>data\ui\2kimages\main\3dicons\icon_canned_food.png</IconFilename>
        </Standard>
        <Locked />
        <Product>
          <StorageLevel>Building</StorageLevel>
          <ProductCategory>11704</ProductCategory>
          <BasePrice>563</BasePrice>
          <CivLevel>3</CivLevel>
          <AssociatedRegion>Moderate</AssociatedRegion>
          <ProductionRegions>
            <Item>
              <RegionType>Moderate</RegionType>
            </Item>
          </ProductionRegions>
        </Product>
        <ExpeditionAttribute>
          <BaseMorale>40</BaseMorale>
        </ExpeditionAttribute>
      </Values>
    </Asset>
    <Asset>
      <Template>FactoryBuilding7</Template>
      <Values>
        <Standard>
          <GUID>1500301131</GUID>
          <Name>IsMainFactory_Fake: Canned Fish</Name>
        </Standard>
        <Building>
          <AssociatedRegions>Moderate</AssociatedRegions>
          <SecondPartyRelevant>0</SecondPartyRelevant>
        </Building>
        <Object>
          <Variations>
            <Item>
              <Filename>data/graphics/buildings/production/processing_06/processing_06.cfg</Filename>
            </Item>
          </Variations>
        </Object>
        <Locked />
        <FactoryBase>
          <FactoryInputs>
            <Item>
              <Product>1010227</Product>
              <Amount>1</Amount>
              <StorageAmount>3</StorageAmount>
            </Item>
            <Item>
              <Product>1010200</Product>
              <Amount>1</Amount>
              <StorageAmount>3</StorageAmount>
            </Item>
          </FactoryInputs>
          <FactoryOutputs>
            <Item>
              <Product>1500010120</Product>
              <Amount>1</Amount>
              <StorageAmount>2</StorageAmount>
            </Item>
          </FactoryOutputs>
          <CycleTime>60</CycleTime>
          <IsMainFactory>1</IsMainFactory>
        </FactoryBase>
        <Maintenance>
          <Maintenances>
            <Item>
              <Product>1010115</Product>
              <Amount>1200</Amount>
            </Item>
          </Maintenances>
        </Maintenance>
      </Values>
    </Asset>
  </ModOp>

  <!-- # Storage -->
  <Group>
    <!-- Storage after Canned Food -->
    <ModOp Type="addNextSibling" GUID="120055,120057"
      Condition="!~/Values/ProductStorageList/ProductList/Item[Product='1010217' and ../Item/Product='1500010120']"
      Path="/Values/ProductStorageList/ProductList/Item[Product='1010217' and not(../Item/Product='1500010120')]">
      <Item>
        <Product>1500010120</Product>
      </Item>
    </ModOp>
    <!-- Consumer after Canned Food -->
    <ModOp Type="addNextSibling" GUID="501997,502019,502006"
      Condition="!~/Values/ProductList/List/Item[Product='1010217' and ../Item/Product='1500010120']"
      Path="/Values/ProductList/List/Item[Product='1010217' and not(../Item/Product='1500010120')]">
      <Item>
        <Product>1500010120</Product>
      </Item>
    </ModOp>
  </Group>

  <!-- # Expedition -->
  <ModOp Type="add" GUID="800111"
    Condition="!~/Values/ExpeditionFeature/FeedOption/FeedOptions[Item/Product='1500010120']"
    Path="/Values/ExpeditionFeature/FeedOption/FeedOptions[not(Item/Product='1500010120')]">
    <Item>
      <MoraleFactor>0.1</MoraleFactor>
      <Product>1500010120</Product>
    </Item>
  </ModOp>

  <!-- Docklands Feedl -->
  <Group>
    <ModOp Type="add" GUID="131764"
      Condition="!~/Values/TradeContractFeature/Traders/Item[TraderName='131809']/TradeLevels/Item/Trades[Item/Good='1010213' and Item/Good='1500010120']"
      Path="/Values/TradeContractFeature/Traders/Item[TraderName='131809']/TradeLevels/Item/Trades[Item/Good='1010213' and not(Item/Good='1500010120')]">
      <Item>
        <Level>Rare</Level>
        <Good>1500010120</Good>
      </Item>
    </ModOp>
    <ModOp Type="add" GUID="502234" Path="/Values/ProductList/List">
      <Item>
        <Product>1500010120</Product>
      </Item>
    </ModOp>
  </Group>
</ModOps>
