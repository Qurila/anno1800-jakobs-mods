{
  "src": ".",
  "out": "${annoMods}/${modName}",  
  "converter": [
    {
      "action": "static",
      "pattern": "**/*.{cfg,ifo,prp,fc,rdm,dds}"
    },
    {
      "action": "static",
      "pattern": "{data/config/**/*,banner.*,README.md}"
    },
    {
      "action": "cf7",
      "pattern": "**/*.cf7"
    },
    {
      "action": "texture",
      "pattern": "data/jakob/ui/icons/*.png",
      "lods": 1
    },
    {
      "action": "texture",
      "pattern": "**/*_{diff,norm,height,metal,mask}.png",
      "lods": 3,
      "changePath": "maps/"
    },
    {
      "action": "gltf",
      "pattern": "**/*.{glb,gltf}",
      "lods": 5,
      "changePath": "rdm/",
      "animPath": "anim/"
    },
    {
      "action": "cfgyaml",
      "pattern": "**/*.cfg.yaml"
    },
    {
      "action": "modinfo",
      "content_en": true
    }
  ],
  "modinfo": {
    "Version": "1.0.1",
    "ModID": "jakob_nw_monument_small",
    "IncompatibleIds": [],
    "ModDependencies": [
      "FamTaubeLexy_NewWorldHotels"
    ],
    "Category": {
      "English": "Gameplay"
    },
    "ModName": {
      "English": "New World Tourism, Small Monument Base",
      "German": "Touristen in der neuen Welt, Kleiner Monumentengrund"
    },
    "Description": {
      "English": "README.md"
    },
    "KnownIssues": null,
    "DLCDependencies": [
      {
        "DLC": "Tourism",
        "Dependant": "required"
      }
    ],
    "CreatorName": "Jakob",
    "CreatorContact": "https://github.com/jakobharder/anno-1800-jakobs-mods",
    "Image" : null
  }
}